<head prefix="og: http://ogp.me/ns#">
  {{ partial('googleanalytics') }}
  <meta charset="utf-8">
  {% set title = page.title + ' | ' + config.title if page.title else
    config.title %}
  {% set description = page.summary if page.summary else
    config.description %}
  <title>{{ title }}</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="author" content="{{ config.author }}">
  <meta name="description" content="{{ description }}">
  <meta name="theme-color" content="#002145" media="(prefers-color-scheme: light)">
  <meta name="theme-color" content="#002145" media="(prefers-color-scheme: dark)">
  {# <meta name="keywords" content="{{ (page.tags | join(',')) if page.tags }}"> #}
  <link rel="canonical" href="{{ url }}">
  {{ feed_tag('http://feed.cloudchat.tech/', { title: 'RSS Feed', type: 'rss' }) }}

  {# Open Graph #}
  <meta property="og:title" content="{{ title }}"/>
  <meta property="og:type" content="{{ 'article' if page.title else 'website' }}"/>
  <meta property="og:image" content="{{ url_for('/images/opengraph-facebook.png') }}"/>
  <meta property="og:image" content="{{ url_for('/images/opengraph-twitter.png') }}"/>
  <meta property="og:image" content="{{ url_for('/images/opengraph-linkedin.png') }}"/>
  <meta property="og:image" content="{{ url_for('/images/opengraph-pinterest.png') }}"/>
  <meta property="og:description" content="{{ description }}"/>
  <meta property="og:url" content="{{ url }}"/>
  <meta name="twitter:card" content="summary_large_image">
  <meta property="twitter:domain" content="@CloudChatTech">
  <meta property="twitter:url" content="{{ url }}">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="https://cloudchat.tech/images/opengraph-twitter.png">

  {# Favicons #}
  <link rel="apple-touch-icon" sizes="57x57" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="114x114" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="120x120" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="144x144" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="152x152" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="60x60" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="72x72" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="apple-touch-icon" sizes="76x76" href="{{ url_for('icons/cloudchat-apple-touch-icon-152.png') }}">
  <link rel="icon" type="image/png" href="{{ url_for('icons/cloudchat-favicon-196.png') }}" sizes="196x196">
  <link rel="icon" type="image/png" href="{{ url_for('icons/cloudchat-favicon-196.png') }}" sizes="160x160">
  <link rel="icon" type="image/png" href="{{ url_for('icons/cloudchat-favicon-196.png') }}" sizes="96x96">
  <link rel="icon" type="image/png" href="{{ url_for('icons/cloudchat-favicon-196.png') }}" sizes="16x16">
  <link rel="icon" type="image/png" href="{{ url_for('icons/cloudchat-favicon-196.png') }}" sizes="32x32">

  <link rel="stylesheet" href="https://use.typekit.net/gzo7pgh.css">

  {{ css('css/main') }}
  <style>
    :root {
      ::-webkit-scrollbar {
        height: 10px;
        width: 10px;
      }
      ::-webkit-scrollbar-track {
        background: #efefef;
        border-radius: 6px;
      }
      ::-webkit-scrollbar-thumb {
        background: #d5d5d5;
        border-radius: 6px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #c4c4c4;
      }
  </style>
</head>